# Detect ICMP Ping (ping sweep detection)
alert icmp any any -> any any (msg:"ICMP Ping Detected"; sid:1000001; rev:1;)

# Detect SQLMap User-Agent in HTTP headers
alert http any any -> any any (msg:"Suspicious HTTP UA - SQLMap"; http.user_agent; content:"sqlmap"; nocase; sid:1000002; rev:1;)

# Detect HTTP POST with 'union select' in body (basic SQL injection attempt)
alert http any any -> any any (msg:"Possible SQL Injection"; content:"union select"; nocase; http_client_body; sid:1000003; rev:1;)

# Detect SSH brute force attempts (more than X in Y time)
alert tcp any any -> any 22 (msg:"SSH Connection Attempt"; flags:S; sid:1000004; rev:1;)
